.tablescroll
{background-color:#fff; margin-top: 0px;margin-left: 0px;}

.tablescroll td, 
.tablescroll_wrapper,
.tablescroll_head,
.tablescroll_foot
{ border:1px solid #ccc; margin-top: 0px;margin-left: 0px;}

.tablescroll td
{ padding:3px 5px; }

.tablescroll_wrapper
{ border-left:0; }

.tablescroll_head
{ font-weight:bold; background-color:#eee; border-left:0; border-top:0; height:30px}

.tablescroll thead td
{ border-right:0; border-bottom:0; }

.tablescroll tbody td
{ border-right:0; border-bottom:0; cursor:hand;}

.tablescroll tbody tr.first td
{ border-top:0; }

.tablescroll tr.selected {
    background-color: #eee
}
.tablescroll_foot
{ font-weight:bold; background-color:#eee; border-left:0; border-top:0; margin-top:3px; }

.tablescroll tfoot td
{ border-right:0; border-bottom:0; }